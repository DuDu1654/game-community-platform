generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  email     String    @unique
  password  String
  avatar    String?   @db.Text
  bio       String?   @default("这个人很懒，什么都没写")
  role      Role      @default(USER)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]
  likes     Like[]
  messages  Message[]
  posts     Post[]

 
  newsComments   NewsComment[]  
  commentLikes   NewsCommentLike[]  

  @@map("user")
}

model Post {
  id           String    @id @default(cuid())
  title        String
  content      String
  images       String?
  viewCount    Int       @default(0)
  likeCount    Int       @default(0)
  commentCount Int       @default(0)
  isPinned     Boolean   @default(false)
  isFeatured   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  authorId     String
  tags         Json?
  comments     Comment[]
  likes        Like[]
  author       User      @relation(fields: [authorId], references: [id])

  @@index([authorId])
  @@index([createdAt])
  @@index([likeCount])
  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  images    Json?
  isReply    Boolean   @default(false) 
  likeCount Int      @default(0)
  replyCount Int       @default(0) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postId    String
  authorId  String
  parentId  String?
  author    User     @relation(fields: [authorId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  Like      Like[]

  parent     Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentReplies")

  

  @@index([postId])
  @@index([authorId])

   @@index([parentId])  
  @@index([createdAt])
  @@map("comments")
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  postId    String?
  commentId String?
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  comment   Comment? @relation(fields: [commentId], references: [id])
  post      Post?    @relation(fields: [postId], references: [id])

  @@unique([authorId, postId, commentId])
  @@index([commentId], map: "likes_commentId_fkey")
  @@index([postId], map: "likes_postId_fkey")
  @@map("likes")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  images    String?
  roomId    String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
   room      Room?    @relation(fields: [roomId], references: [id])

   

  @@index([roomId])
  @@index([createdAt])
  @@index([authorId], map: "messages_authorId_fkey")
  @@map("messages")
}


model Room {
  id          String    @id @default(cuid())
  name        String    @db.VarChar(255)
  description String?   @db.Text
  createdBy   String?   @map("created_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  messages    Message[]
  
  @@map("rooms")
}

model News {
  id         String   @id @default(cuid())
  title      String
  content    String
  summary    String?
  coverImage String?
  source     String?
  viewCount  Int      @default(0)
  isFeatured Boolean  @default(false)
  tags       String?  @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
   comments  NewsComment[] 

  @@index([createdAt])
  @@index([isFeatured])
  @@map("news")
}


model NewsComment {
  id           String       @id @default(cuid())
  content      String       @db.Text
  images       Json?
  isReply      Boolean      @default(false)
  likeCount    Int          @default(0)
  replyCount   Int          @default(0)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  // 外键关联
  newsId       String
  authorId     String
  parentId     String?
  
  // 关系定义
  author       User         @relation(fields: [authorId], references: [id])
  news         News         @relation(fields: [newsId], references: [id])
  parent       NewsComment? @relation("NewsCommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies      NewsComment[] @relation("NewsCommentReplies")
  likes        NewsCommentLike[]
  
  // 索引
  @@index([newsId])
  @@index([authorId])
  @@index([parentId])
  @@index([createdAt])
  @@map("news_comments")
}

model NewsCommentLike {
  id         String       @id @default(cuid())
  createdAt  DateTime     @default(now())
  commentId  String
  authorId   String
  author     User         @relation(fields: [authorId], references: [id])
  comment    NewsComment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  
  // 唯一约束：一个用户只能对一条评论点赞一次
  @@unique([authorId, commentId])
  @@map("news_comment_likes")
}

enum Role {
  USER
  MODERATOR
  ADMIN
}
