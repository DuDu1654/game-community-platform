generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  email     String    @unique
  password  String
  avatar    String?   @default("default-avatar.jpg")
  bio       String?   @default("这个人很懒，什么都没写")
  role      Role      @default(USER)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]
  likes     Like[]
  messages  Message[]
  posts     Post[]

  @@map("users")
}

model Post {
  id           String    @id @default(cuid())
  title        String
  content      String
  images       String?
  viewCount    Int       @default(0)
  likeCount    Int       @default(0)
  commentCount Int       @default(0)
  isPinned     Boolean   @default(false)
  isFeatured   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  authorId     String
  tags         Json?
  comments     Comment[]
  likes        Like[]
  author       User      @relation(fields: [authorId], references: [id])

  @@index([authorId])
  @@index([createdAt])
  @@index([likeCount])
  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  images    Json?
  isReply    Boolean   @default(false) 
  likeCount Int      @default(0)
  replyCount Int       @default(0) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postId    String
  authorId  String
  parentId  String?
  author    User     @relation(fields: [authorId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  Like      Like[]

  parent     Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentReplies")

   author     User      @relation(fields: [authorId], references: [id])
  post       Post      @relation(fields: [postId], references: [id])
  likes      Like[]

  @@index([postId])
  @@index([authorId])

   @@index([parentId])  
  @@index([createdAt])
  @@map("comments")
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  postId    String?
  commentId String?
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  comment   Comment? @relation(fields: [commentId], references: [id])
  post      Post?    @relation(fields: [postId], references: [id])

  @@unique([authorId, postId, commentId])
  @@index([commentId], map: "likes_commentId_fkey")
  @@index([postId], map: "likes_postId_fkey")
  @@map("likes")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  images    String?
  roomId    String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])

  @@index([roomId])
  @@index([createdAt])
  @@index([authorId], map: "messages_authorId_fkey")
  @@map("messages")
}

model News {
  id         String   @id @default(cuid())
  title      String
  content    String
  summary    String?
  coverImage String?
  source     String?
  viewCount  Int      @default(0)
  isFeatured Boolean  @default(false)
  tags       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([createdAt])
  @@index([isFeatured])
  @@map("news")
}

enum Role {
  USER
  MODERATOR
  ADMIN
}
